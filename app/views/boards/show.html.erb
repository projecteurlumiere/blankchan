<div class="heading">
  <h2><%= link_to "/#{@board.name}/", board_path(@board.name) %></h2>
  <h1><%= link_to "#{@board.full_name}", board_path(@board.name) %></h1>
  <%= link_to "New Thread", new_board_topic_path(@board.name), data: {turbo_frame: "new-post-form"} %>
  <%# gets new topic form (which is almost the same as the new post form) %>
  <%= turbo_frame_tag "new-post-form" do %>
  <% end %>
</div>

<%= render "shared/lightbox" %>
<ul data-controller="lightbox", data-action="click->lightbox#showPic" id="boards-body">
  <%= render partial: "preview_topic", collection: @topics, locals: { board: @board }, cached: true %>
</ul>

<%= link_to_next_page @topics, "Next", id: "next-page", data: { controller: "next-page", turbo_stream: true } %>

<nav class="inner-links" aria-label="board navigation">
  <a href="#boards-body">Back to top</a>
  |
  <%= link_to "New Thread", "#new-topic-form" %>
  <%# link_to "New Thread", new_board_topic_path(@board.name) %>
</nav>

