<!DOCTYPE html>
<html>
  <head>
    <title>Blankchan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header>
      <nav>
        <div class="menu-user">
          <%= link_to "this is root", root_path %>
          <%= link_to "get passcode", new_passcode_path %>
          <% if user_signed_in? %>
            <%= link_to "quit passcode", session_path, data: {turbo_method: :delete} %>
            <%# button_to "quit passcode", session_path, method: :delete %>
          <% else %>
           <%= link_to "validate passcode", new_session_path %>
          <% end %>
        </div>
        <% if current_user&.admin_role? %>
          <div class="menu-admin">
            <%= link_to "users", admin_users_path %>
          </div>
        <% end %>
        <br>
        <div class="board-list">
          <% Board.all_names.each do |name| %>
            <%= link_to name, board_path(name) %>
          <% end %>
        </div>
      </nav>
    </header>

    <% if flash.present? %>
      <% flash.each do |flash_type, text| %>
        <%= "<h2 class=\"#{flash_type}\">#{text}</h2>".html_safe %>
      <% end %>
    <% end %>


    <% if @errors %>
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>


    <% if session[:user_id] %>
      <h2><%= "Welcome, #{current_user.role}" %></h2>
    <% end %>
    <%= yield %>
  </body>
</html>
