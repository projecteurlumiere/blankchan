<%= tag.div class: "user-management-panel", id: "user-id-#{user.id}" do %>
  <%= user.id %>
  <% if user.moderator_role? %>
    <%= button_to "dismiss", admin_user_path(user.id), method: "patch", params: {directive: "dismiss moderator"}%>
  <% elsif user.passcode_user_role? %>
    <%= button_to "promote", admin_user_path(user.id), method: "patch", params: {directive: "promote to moderator"} %>
  <% end %>
  <%= user.role %>
  <% unless user.admin_role? %>
    <%= button_to "delete user", admin_user_path(user.id), method: "delete" %>
  <% end %>
<% end %>
