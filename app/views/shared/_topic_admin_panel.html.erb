<%# Condition must be put outside (if used) %>
<% div_class = %w[topic-admin-panel] unless div_class %>
<% post_ids = posts.each_with_object([]) { |p, arr| arr << p.id } %>

  <%= link_to "Manage posts", board_admin_show_topic_path(board.name, topic, params: { admin: true, "post_ids[]": post_ids }), data: {turbo_stream: true} %>
  |
  <% if topic.closed? %>
    <%= button_to "Open Topic", board_open_topic_path(board.name, topic) %>
  <% else %>
    <%= button_to "Close Topic", board_close_topic_path(board.name, topic) %>
  <% end %>
  |
  <%= button_to "Delete Topic", board_topic_path(board.name, topic), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this topic?"} %>
