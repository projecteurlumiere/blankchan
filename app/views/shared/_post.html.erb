<% post.decorate %>
<div class="post" id="post-id-<%="#{post.id}"%>">
  <p class="post-metadata">Posted at: <%= post.created_at %></p>
  <div class="images-showcase">
    <% if post.images.attached? %>
      <% post.images.each do |image| %>
        <% next if image.nil? || !image.variable? %>
        <%= link_to image_tag(post.image_as_thumb(image)), image %>
      <% end %>
    <% end %>
  </div>
  <h4 class="post-title"><%= post.name %></h4>
  <div class="post-text"><%= simple_format(post.text) %></div>
</div>
