<% post.decorate %>

<div class="post" id="post-id-<%="#{post.id}"%>">
  <div class="post-first-line">
    <h4 class="post-title"><%= post.name %></h4>
    <div class="post-metadata">
      <div class="post-metadata post-id">â„–<%="#{post.id}"%></div>
      <div class="post-metadata-time">Posted at: <%= post.created_at %></div>
    </div>
  </div>
  <div class="images-showcase">
    <% if post.images.attached? %>
      <% post.images.each do |image| %>
        <% next if image.nil? || !image.variable? %>
        <%= link_to image_tag(post.image_as_thumb(image)), image %>
      <% end %>
    <% end %>
  </div>
  <div class="post-text"><%= simple_format(post.text) %></div>
</div>
